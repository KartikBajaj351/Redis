pipeline {
    agent any
    environment {
        ANSIBLE_FORCE_COLOR = 'true'
        ANSIBLE_HOST_KEY_CHECKING = 'False'
    }
    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }
        stage('Verify Project') {
            steps {
                dir('prod') {
                    sh '''
                    pwd
                    ls -l
                    '''
                }
            }
        }
        stage('Ansible Syntax Check') {
            steps {
                dir('prod') {
                    sh '''
                    ansible-playbook redis.yml \
                      -i inventory \
                      --syntax-check
                    '''
                }
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                dir('prod') {
                    sh '''
                    ansible-playbook redis.yml \
                      -i inventory
                    '''
                }
            }
        }
    }
}
